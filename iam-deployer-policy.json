{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowListAndReadOnlyAccess",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets",
        "s3:GetBucketLocation",
        "iam:ListRoles",
        "iam:GetRole",
        "sts:AssumeRole"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowFullAccessToProjectSpecificResources",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:PutBucketPolicy",
        "s3:CreateBucket",
        "s3:DeleteBucket",
        "lambda:CreateFunction",
        "lambda:DeleteFunction",
        "lambda:UpdateFunctionCode",
        "dynamodb:CreateTable",
        "dynamodb:DeleteTable",
        "dynamodb:UpdateTable",
        "dynamodb:PutItem",
        "kinesis:CreateStream",
        "kinesis:DeleteStream"
      ],
      "Resource": [
        "arn:aws:s3:::*aws-project-2025*",
        "arn:aws:lambda:*:*:function:aws-project-2025*",
        "arn:aws:dynamodb:*:*:table/aws-project-2025*",
        "arn:aws:kinesis:*:*:stream/aws-project-2025*"
      ]
    }
  ]
}
